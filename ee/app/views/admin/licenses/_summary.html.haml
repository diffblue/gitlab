.h3.gl-mb-5= _('License overview')
= render Pajamas::CardComponent.new(card_options: { class: 'gl-mb-5' },
                                    body_options: { class: 'gl-display-flex gl-justify-content-space-between gl-align-items-center' }) do |c|
  - c.with_body do
    %div
      %p.gl-mb-0
        = sprite_icon('license', css_class: 'gl-fill-gray-700')
        %span.gl-ml-3
          = _('Plan:')
        %strong= @license.plan.capitalize
        %span.gl-ml-5
          = render 'admin/licenses/license_status'
        %span.gl-ml-5
          = _('Licensed to:')
          %strong= @license.licensee_name
          = "(#{@license.licensee_email})"
    %div
      = link_to _('View details'), admin_subscription_path, class: "gl-button btn btn-default"
